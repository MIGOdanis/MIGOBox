<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="25dip"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:layout_marginTop="10dip"
    android:background="@color/faBackColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kurumap.tools.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/abbreviationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="設定店家簡稱"
        android:textSize="35px"
    />

    <TextView
        android:id="@+id/abbreviationDepiction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/abbreviationTitle"
        android:layout_below="@+id/abbreviationTitle"
        android:text="設定最多四個字的簡稱，簡稱會使用在首頁訊息及精選列表中"
        android:textSize="20px" />

    <EditText
        android:id="@+id/abbreviation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/abbreviationDepiction"
        android:layout_below="@+id/abbreviationDepiction"
        android:textSize="35px" />

    <TextView
        android:id="@+id/catDepiction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/catTitle"
        android:layout_below="@+id/catTitle"
        android:text="分類只能設定一組，請選擇適合的類別，讓網友能準確找到您"
        android:textSize="20px" />

    <TextView
        android:id="@+id/catTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/abbreviation"
        android:layout_below="@+id/abbreviation"
        android:layout_marginTop="12dp"
        android:text="店家屬性分類"
        android:textSize="40px" />

    <Spinner
        android:id="@+id/cat2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/catDepiction"
        android:layout_below="@+id/catDepiction"
        android:layout_marginTop="85dp"
        android:textSize="20px" />

    <Spinner
        android:id="@+id/cat1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cat2"
        android:layout_below="@+id/catDepiction"
        android:layout_marginTop="13dp"
        android:textSize="20px" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cat2"
        android:layout_below="@+id/cat2"
        android:layout_marginTop="8dp"
        android:text="修改" />
        
</RelativeLayout>